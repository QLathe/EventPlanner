@model Event
@{
    ViewData["Title"] = "Set Reminders";
}
<div class="container">
    <h1 class="display-4 text-center">Setup Email Reminders</h1>
    <table class="table">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Date</th>
            <th scope="col">Time</th>
            <th scope="col">Setup Reminder</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>@ViewBag.CurrentEvent.Title</td>
                <td>@ViewBag.CurrentEvent.ScheduledAt.ToString("d")</td>
                <td>@ViewBag.CurrentEvent.ScheduledAt.ToString("hh:mm")</td>
                <td><a href="/reminder/@ViewBag.CurrentEvent.EventId" class="btn btn-primary">Set Reminder</a></td>            
            </tr>
    </tbody>
</table>
    <form action="/reminder/@ViewBag.CurrentEvent.EventId/create" method="post">
        <div class='form-group'>
            <label for="timeBefore">Enter the hours before that you'd like the reminder</label>
            <input type="number" placeholder= "Enter # of Hours" name="timeBefore">
        </div> 
        <button type="submit" class="btn btn-primary">Set Reminder</button>
    </form>
</div>
